@page
@model TGL.WebApp.Pages.Students.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

    <h1>Students</h1>

    <form method="post">
        <table>
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>LastName</td>
                    <td>Nit</td>
                    <td>Age</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Students)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.LastName</td>
                        <td>@item.Nit</td>
                        <td>@item.Age</td>
                        <td>
                            <button type="submit" asp-page-handler="delete" asp-route-id="@item.Id">
                                delete
                            </button>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </form>

    <a asp-page="Add">Create new student</a>




