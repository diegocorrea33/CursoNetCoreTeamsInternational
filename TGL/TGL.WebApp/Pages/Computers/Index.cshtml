@page
@model TGL.WebApp.Pages.Computers.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

}

<h1>Computers</h1>

<form method="post">
    <table>
        <thead>
            <tr>
                <td>Id</td>
                <td>Brand</td>
                <td>Cpu</td>
                <td>Model</td>
                <td>Ram</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Computers)
            {

                <tr>
                    <td>@item.Id</td>
                    <td>@item.Brand</td>
                    <td>@item.Cpu</td>
                    <td>@item.Model</td>
                    <td>@item.Ram</td>
                    <td>
                        <a class="waves-effect waves-light btn-small" asp-page="Edit" asp-route-id="@item.Id">
                            Edit
                        </a>
                    </td>
                    <td>
                        <button class="waves-effect waves-light btn-small" type="submit" asp-page-handler="delete" asp-route-id="@item.Id">
                            delete
                        </button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</form>

<a asp-page="Add">Create new Computer</a>
